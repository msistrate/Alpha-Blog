<h1 class="text-center mt-4">Listing Alpha Bloggers</h1>

<div class="apple_pagination bg-transparent">
	<%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
  <div class="row justify-content-center">
    <div class="col-8 mt-4 shadow-lg mb-5 bg-body rounded text-white">
      <div class="card text-center">
        <div class="card-header bg-dark text-left font-italic font-weight-bold">
          <%= link_to user.username, user %>
        </div>
        <div class="card-body  bg-secondary bg-gradient">
          <h5 class="card-title">
						<%= link_to gravatar_for(user, size: 150), user %>
					</h5>
          <p class="card-text"><%= pluralize(user.articles.count, 'article') %></p>
					<%= link_to 'View progfile', user, class: 'btn btn-success' %>
					<%= link_to 'Edit article', edit_user_path(user), class: 'btn btn-primary' %>
			  </div>
        <div class="card-footer bg-dark text-white">
          <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="apple_pagination mb-4 bg-transparent">
	<%= will_paginate @users, :container => false %>
</div>
