<% if @article.errors.any?  %>
 <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <h2>Some errors prevented this article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>  
  </ul>
 </div>
<% end %>
